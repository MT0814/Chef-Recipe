<!-- Account Recipe Cards -->
{{#if recipes.length}}
<div class="container-fluid" id="recipes">
    <div class="row account-cards recipe-list">
        {{#each recipes as |recipe|}}
        <div class="col-lg-4 col-sm-12 small-cards">
            <div class="card">
                <img src="{{recipe.dishPic}}" class="card-img-top" alt="{{recipe.dishPic}}" />
                <div class="card-body">
                    <h5 class="card-title">{{recipe.dish}}</h5>
                    <p class="card-text">{{recipe.dishDesc}}</p>

                    <br />
                    <div class="account-pg-btn">
                        <a href="/api/recipe/{{recipe.id}}" class="btn btn-orange text-center" id="recipe-btn">Recipe</a>
                        <a class="btn btn-orange delete-btn text-center" data-id="{{recipe.id}}" type="submit">Delete</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

{{else}}
<!-- Account without Recipe -->
<div class="container-fluid empty-text">
    <p class="text-center welcome">
        <span class="user">{{username}}</span>, Welocme! It's empty now. Start to create your recipe today!</p>
    <div class="text-center"><img src="https://media4.giphy.com/media/h2HTvVuKVS4daQaVuS/giphy.gif" width="50%"
            alt="cooking" /></div>
</div>
{{/if}}

<script src="/js/delete-recipe.js"></script>
